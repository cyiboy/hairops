<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/darkop"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/add_a_photo"
            android:id="@+id/requesterImage"
            android:layout_height="90dp" />
        <TextView
            android:textSize="16sp"
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/NameStylist"
            android:paddingEnd="32dp"
            android:text="balance"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff" />

        <TextView
            android:textSize="16sp"
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:id="@+id/userBalance"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff" />

        <TextView
            android:textSize="16sp"
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:id="@+id/neededAmount"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff" />

        <TextView
            android:textSize="16sp"
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:id="@+id/proffession"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:textColor="#ffffff" />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnPay"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_defaultColor="@color/darkp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            fancy:fb_text="Pay"
            fancy:fb_textColor="@color/colorWhite"
            fancy:fb_textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fancy:fb_radius="30dp"/>

    </LinearLayout>
</ScrollView>
