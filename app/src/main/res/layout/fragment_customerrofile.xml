<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorPrimary"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.customerrofile">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:id="@+id/profileImage"
        android:src="@drawable/user"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0.0"
        android:id="@+id/walletBalanceUser"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="34sp" />


    <TextView
        android:textColor="#fff"
        android:id="@+id/nameOfUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jason Ofua"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No 3 akara junction"
        android:textAlignment="center"
        android:id="@+id/addressOfUser"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hair Stylist"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/specializationOfUser"
        android:textStyle="bold"
        android:textSize="18sp" />




    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnFundWallet"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="10dp"
        fancy:fb_defaultColor="@color/gold"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        fancy:fb_text="FUND WALLET"
        fancy:fb_textColor="#fff"
        fancy:fb_textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fancy:fb_radius="30dp"/>

    <TextView
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE PROFILE"
        android:id="@+id/updateProfileUser"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELP"
        android:id="@+id/txtHelpUser"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:id="@+id/logoutUser"
        android:textStyle="bold"
        android:textSize="18sp" />
    </LinearLayout>


</ScrollView>