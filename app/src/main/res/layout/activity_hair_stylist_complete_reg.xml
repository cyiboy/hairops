<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/backgroundtwo"
    android:padding="10dp"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".HairStylistCompleteReg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/adduser"
            android:id="@+id/addImageStylist"
            android:layout_height="90dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/edtStylistName"
            android:textColorHint="#8effffff"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Name"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtStylistEmail"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:textColorHint="#8effffff"
            android:inputType="textEmailAddress"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Email"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtStylistPhoneNumber"
            android:inputType="phone"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Phone Number"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtStylistWorkAddress"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Work Address"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtStylistBankName"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Bank Name "
            android:textColor="#ffffff" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtStylistAccountName"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Bank Account Name"
            android:textColor="#ffffff" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtStylistAccountNumber"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:textColorHint="#8effffff"
            android:inputType="number"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Bank Account Number"
            android:textColor="#ffffff" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/specialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:hint="Specialization"
            android:textColorHint="@color/gold"
            app:ms_arrow_tint="@color/gold"
            app:ms_background_color="@color/colorPrimary"
            app:ms_dropdown_height="wrap_content"
            app:ms_dropdown_max_height="350dp"
            app:ms_hint_color="@color/gold"
            app:ms_text_color="@color/gold" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/experienceLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:hint="Experience Level"
            android:textColorHint="@color/gold"
            app:ms_arrow_tint="@color/gold"
            app:ms_background_color="@color/colorPrimary"
            app:ms_dropdown_height="wrap_content"
            app:ms_dropdown_max_height="350dp"
            app:ms_hint_color="@color/gold"
            app:ms_text_color="@color/gold" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnPickStylistLocation"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_defaultColor="@color/colorPrimary"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            fancy:fb_text="Pick Your Work Location"
            fancy:fb_textColor="@color/gold"
            fancy:fb_textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fancy:fb_radius="30dp"/>


        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnCompleteStylistRegistration"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_defaultColor="@color/colorPrimary"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            fancy:fb_text="Complete Registration"
            fancy:fb_textColor="@color/gold"
            fancy:fb_textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fancy:fb_radius="30dp"/>
    </LinearLayout>

</ScrollView>