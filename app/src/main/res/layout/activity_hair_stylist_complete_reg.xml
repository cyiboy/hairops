<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".HairStylistCompleteReg">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="111dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Sign up"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:text="Personal Information"
                    android:textColor="@color/otherColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/addImageStylist"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_addone" />
                <TextView
                    android:id="@+id/noImage"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Please select an image"
                    android:textColor="#E00000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


        <EditText
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/edtStylistName"
            android:textColorHint="#8effffff"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble2"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Name"
            android:textColor="#ffffff" />
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/edtStylistEmail"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/bubble2"
            android:textColorHint="#8effffff"
            android:inputType="textEmailAddress"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Email"
            android:textColor="#ffffff" />
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <EditText
            android:maxLength="11"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/edtStylistPhoneNumber"
            android:inputType="phone"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/bubble2"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Phone Number"
            android:textColor="#ffffff" />
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/edtStylistWorkAddress"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/bubble2"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Work Address"
            android:textColor="#ffffff" />
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/edtStylistBankName"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/bubble2"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Bank Name "
            android:textColor="#ffffff" />
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtStylistAccountName"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/bubble2"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Bank Account Name"
            android:textColor="#ffffff" />
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtStylistAccountNumber"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/bubble2"
            android:textColorHint="#8effffff"
            android:inputType="number"
            android:maxLength="10"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Bank Account Number"
            android:textColor="#ffffff" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/specialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:hint="Specialization"
            android:textColorHint="@color/colorWhite"
            app:ms_arrow_tint="@color/colorWhite"
            app:ms_background_color="@color/darkli"
            app:ms_dropdown_height="wrap_content"
            app:ms_dropdown_max_height="350dp"
            app:ms_hint_color="@color/colorWhite"
            app:ms_text_color="@color/colorWhite" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/experienceLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:hint="Experience Level"
            android:textColorHint="@color/colorWhite"
            app:ms_background_color="@color/darkli"
            app:ms_dropdown_height="wrap_content"
            app:ms_dropdown_max_height="350dp"
            app:ms_hint_color="@color/colorWhite"
            app:ms_text_color="@color/colorWhite" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnPickStylistLocation"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_defaultColor="@color/darkli"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            fancy:fb_text="Pick Your Work Location"
            fancy:fb_textColor="@color/colorWhite"
            fancy:fb_textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fancy:fb_radius="30dp"/>



        <Button
            android:id="@+id/btnCompleteStylistRegistration"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/loginPassword"
            android:layout_marginTop="60dp"
            android:background="@drawable/_dark"
            android:fontFamily="@font/roboto_bold"
            android:textAllCaps="false"
            android:foregroundTint="@color/darkop"
            android:text="Complete Registration"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>