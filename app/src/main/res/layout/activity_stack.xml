<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="@mipmap/backgroundtwo"
    android:layout_height="match_parent"
    tools:context="com.example.user.hairr.StackActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lin1"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/circleimageHairStylist"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/stylist"
            android:scaleType="fitCenter"
            android:layout_marginTop="40dp" />

        <ImageView
            android:id="@+id/circleimageNormalUser"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/customers"
            android:scaleType="fitCenter"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:id="@+id/lin2"
       android:layout_below="@+id/lin1"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Hair Stylist"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_width="0dp"
            android:textAlignment="center"
            android:text="Customers"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>
